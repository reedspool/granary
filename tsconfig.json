{
  "exclude": [],
  "compilerOptions": {
    "rootDir": ".",
    "noEmit": true,
    "module": "nodenext",
    "target": "esnext",

    "lib": ["esnext", "dom"],
    "types": ["node"],

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "allowImportingTsExtensions": true
  }
}
